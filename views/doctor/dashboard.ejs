<div class="container mt-5">
  <h2>Volunteers List</h2>
    <table class="table table-bordered table-hover">
        <thead>
            <tr style="text-align: center;">
                <th style="background-color: #c6cdd3;">SL.No</th>
                <th style="background-color: #c6cdd3;">Name</th>
                <th style="background-color: #c6cdd3;">Email</th>
                <th style="background-color: #c6cdd3;">Mobile</th>
                <th style=" background-color: #c6cdd3;">Service </th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user,index) => { %>
                <tr style="text-align: center;">
                    <td style="text-align: center;"><%= index+1 %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.mobile %></td>
                    <td><%= user.is_varified ? 'Available' : 'Not-Available' %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

