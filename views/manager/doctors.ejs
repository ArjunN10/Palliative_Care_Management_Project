<div class="container mt-4">
  <h2 style="font-style: oblique;">DOCTORS LIST</h2>
  <table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
            <tr>
                <th>SL.No</th>
                <th>Reg.ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Doctor Verified</th>
                <th>Actions</th>
                <th>Edit</th>
                <th>Mark attendance</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user,index) => { %>
            <tr>
              <td style="text-align: center;"><%= index+1 %></td>
              <td><%= user._id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.mobile %></td>
              <td><%= user.is_varified ? 'Yes' : 'No' %></td>
              <td style="text-align: center;">
                <form id="toggleForm<%= user._id %>" action="/manager/doctors/<%= user._id %>/toggle_verification" method="POST" class="d-inline-block">
                  <input type="hidden" id="isVerified<%= user._id %>" name="is_verified" value="<%= user.is_verified ? '0' : '1' %>">
                  <button type="submit" onclick="toggleVerification('<%= user._id %>')" class="btn btn-sm btn-success rounded-pill">
                    <%= user.is_verified ? 'Unverify' : 'Verify' %> 
                  </button>
                </form>
                <form id="toggleForm<%= user._id %>" action="/manager/doctors/<%= user._id %>/toggle_verification" method="POST" class="d-inline-block">
                  <input type="hidden" id="isVerified<%= user._id %>" name="is_verified" value="<%= user.is_verified ? '1' : '0' %>">
                  <button type="submit" onclick="toggleVerification('<%= user._id %>')" class="btn btn-sm btn-danger rounded-pill">
                    <%= user.is_verified ? 'verify' :'Unverify' %> 
                  </button>
                </form>
                
              </td>
              <td>
                <a href="/manager/doctors/<%= user._id %>/edit" class="btn btn-warning btn-sm rounded-pill">Edit</a>
              
            </td>
            <td>
              <a href="/manager/doctor/<%= user._id %>" class="btn btn-primary btn-sm rounded-pill">Mark attendance</a>
            </td>
          
            </tr>
            <% }) %>
          </tbody>
    </table>
</div>

