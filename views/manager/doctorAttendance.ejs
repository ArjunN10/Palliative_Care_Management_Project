<div class="container mt-4">
  <h2 style="font-style: oblique;">DOCTOR'S LIST</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr style="text-align: center;">
                    <th>Reg.ID</th>
                    <th>Name</th>
                    <th>Availablity</th>
                </tr>
            </thead>
            <tbody style="text-align: center;">
                <% users.forEach((user,index) => { %>
                <tr>
                  <td><%= index+1 %></td>

                  <td> 
                    <a href="/manager/attendance/doctors/<%= user._id %>">
                    <B style="color: black;">Dr.
                    <%= user.name %>
                </B>
                </td>
                 
                  <% if (user.is_varified) { %>
                      <td style="color: green;"><B>Available</B></td>
                  <% } else { %>
                      <td style=" color: red;"><B>Unavailable</B></td>
                  <% } %>
                
                </tr>
                <% }) %>
              </tbody>
        </table>
