  <form action="/staff/searchPatients" method="post" class="d-flex">
      <input type="search" name="q" placeholder="Search Patient" class="form-control rounded-pill me-2" style="min-width: 200px;" />
      <button type="submit"  class="btn btn-outline-success rounded-pill">Search</button>
  </form>
