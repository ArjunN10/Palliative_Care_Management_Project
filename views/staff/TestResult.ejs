<%- include('../layouts/header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Result Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            color: #333;
            margin: 20px;
        }

        h1 {
            color: #ffffff;
            font-weight: bolder;
        }

        div {
            background-color: #ffffff;
            border: 1px solid #ccc;
            padding: 20px;
            margin-top: 20px;
            border-radius: 8px;
        }

        p {
            margin: 10px 0;
        }

        a {
            display: block;
            color: #fff;
            background-color: #004080;
            padding: 10px;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>Test Result Details</h1>
    
    <% result.forEach(result => { %>
        <div>
            <p><strong>Patient ID:</strong> <%= result.patient %></p>
            <p><strong>Test Name:</strong> <%= result.name %></p>
            <p><strong>Disease:</strong> <%= result.disease %></p>
        </div>
        <a href="<%= result.test_result %>" target="_blank">View PDF</a>
    <% }); %>
</body>
</html>
