<%- include('../layouts/header.ejs') %>
    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-4">

                <% if(message && typeof message !=='undefined' ){ %>
                    <div class="alert alert-success">
                        <%= message %>
                    </div>
                    <% } %>
                        <% if(error && typeof error !=='undefined' ){ %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                            <% } %>
                            <div style="position: fixed; top: 5px; right: 0; margin: 50px;">
                                <div style="float: left;">
                                    <img src="/images/stafflogin1.jpg" alt="Profile Image" style="width: 100px; height: 100px;margin-left: 20px; margin-right: auto;">
                                </div>
                                <div style="margin-top:10px ; margin-left: 20px; margin-right: auto;">   
                                    <a href="/volunteer/staffslogin" class="btn btn-primary ">Staff Login</a>
                                </div>
                            </div>
                            
                                <div class="card">
                                    <div class="text-center py-2">
                                        <img
                                          src="/images/parirakshalogo.png"
                                          alt=""
                                          class="mb-0"
                                          style="width: 180px; height: 120px;"
                                        />
                                        <h4 class="mb-0 text-secondary" style="font-family:'Times New Roman', Times, serif;text-shadow: 10px;">VISITOR LOGIN</h4>
                                      </div>
                                    <div class="card-body">
                                        <form method="post" id="login-form" action="/login" novalidate>
                                            <div class="mb-3">
                                                <label for="email" class="form-label">Email</label>
                                                <input type="email" id="email" name="email" class="form-control"
                                                    placeholder="Enter your Email" required>
                                                <div class="invalid-feedback">
                                                    Please enter a valid email
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="password" class="form-label">Password</label>
                                                <input type="password" id="password" name="password"
                                                    class="form-control" placeholder="Enter your password" required>
                                                <div class="invalid-feedback">
                                                    Please enter a password
                                                </div>
                                            </div>
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-primary rounded-pill">Log in</button>
                                            </div>
                                                <!-- <p style="margin-left: 47.5%;"> <b>OR</b> </p>
                                                <div class="d-grid mb-3 mt-2">
                                                    <a href="/volunteer/staffslogin" class="btn btn-primary rounded-pill"
                                                    >Staff Login</a>
                                                </div> -->
                                               
                                                <div class="mb-1 mt-3">
                                                    <p>
                                                     <b>
                                                        Don't have an account?
                                                     </b>  <a href="/register">Create account</a>
                                                    </p>
                                                  </div>
                                              
                                        </form>
                                    </div>
                            </div>
                    </div>
                </div>
 
    <script>
        const form = document.getElementById("login-form")

        console.log(form);

        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
                form.classList.add('was-validated')
            } else {
                form.submit()
            }

        }, false)
    </script>


    <%- include('../layouts/footer.ejs') %>