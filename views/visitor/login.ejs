    <script>
        const form = document.getElementById("login-form")

        console.log(form);

        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
                form.classList.add('was-validated')
            } else {
                form.submit()
            }

        }, false)
    </script>
